<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"

    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".view.PaymentActivity">


    <!-- Title -->
    <TextView
        android:id="@+id/tvPaymentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose Payment Method"
        android:textSize="24sp"
        android:textColor="#222222"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- eSewa Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEsewa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgEsewa"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="eSewa Logo"
                />

            <TextView
                android:id="@+id/tvEsewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with eSewa"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Khalti Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardKhalti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cardEsewa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imgKhalti"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Khalti Logo"
               />

            <TextView
                android:id="@+id/khalti_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with Khalti"
                android:textSize="18sp"
                android:textColor="#005CAF"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Pay Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCardPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cardKhalti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgCardPay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Card Pay Icon"
                />

            <TextView
                android:id="@+id/tvCardPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with Card"
                android:textSize="18sp"
                android:textColor="#D84315"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
